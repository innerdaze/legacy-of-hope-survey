<?xml version='1.0' encoding='utf-8'?>
<widget id="uk.co.orbistech.mstock" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Orbis Site Assistant</name>
    <description>
        A simple app for taking stock
    </description>
    <author email="support@orbistech.co.uk" href="https://orbistech.co.uk">
        Orbis Tech Ltd
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-targetSdkVersion" value="22" />
    <preference name="windows-target-version" value="10.0" />
    <preference name="orientation" value="portrait" />
</widget>
