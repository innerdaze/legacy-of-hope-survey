<?xml version='1.0' encoding='utf-8'?>
<widget id="uk.co.orbistech.mstock" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Orbis Site Assistant</name>
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-targetSdkVersion" value="22" />
    <description>
        A simple app for taking stock
    </description>
    <author email="support@orbistech.co.uk" href="https://orbistech.co.uk">
        Orbis Tech Ltd
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-console" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="platforms/android/res/mipmap-ldpi/ic_launcher.png" density="ldpi" />
        <icon src="platforms/android/res/mipmap-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="platforms/android/res/mipmap-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="platforms/android/res/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="platforms/android/res/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="platforms/android/res/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-fabric-plugin" spec="~1.1.7">
        <variable name="FABRIC_API_KEY" value="dd87f6353ee085f2e98da9832d5b331e4b4b78bf" />
        <variable name="FABRIC_API_SECRET" value="a2e15103d238eb04d8cbbdd9715f94a774e90bf6739ee816e988fd950bbff6a7" />
    </plugin>
    <plugin name="cordova-plugin-device" spec="~1.1.6" />
</widget>
